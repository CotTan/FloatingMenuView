<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is the line -->
    <!-- left 和right是左右边距 -->
    <item
        android:left="0dp"
        android:right="0dp">
        <shape>
            <solid android:color="@color/lineColor" />
        </shape>
    </item>
    <!--bottom是横线高度 -->
    <item android:top="1dp">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>